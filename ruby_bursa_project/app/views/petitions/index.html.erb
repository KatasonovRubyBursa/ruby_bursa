	<h1>Все петиции</h1>
		<table class= "table">
			<tr>
				<th align="left">Петиция</th>
				<th align="left">Автор</th>
			</tr>
			<% @petitions.each do |p| %>
			 	<tr>
					<td><%= link_to p.title, petition_path(p) %></td>			
					<td><%= "#{User.find(p.user_id).first_name} #{User.find(p.user_id).last_name}" %></td>
				</tr>
			<% end %>
		</table>
